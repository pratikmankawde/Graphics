#########################################################
##             	librarys to link
#########################################################

LIBS= -lGL -lGLU -lglut -lm

#########################################################
##		Compiler
#########################################################

COMPILE= gcc -O2

#########################################################
##              Output file
#########################################################

OUTPUT=PlyRenderer

#########################################################
##              Input objects
#########################################################

OBJECTS= PlyRenderer.o


#########################################################
##      	Everything is dependant on the output file
#########################################################

all : $(OUTPUT)

#########################################################
##  The output program is dependant on the input objects
#########################################################

$(OUTPUT) : $(OBJECTS)
	$(COMPILE) $(OBJECTS) $(LIBS) -o $(OUTPUT)


#########################################################
##     		Compile files.
#########################################################

DSK.o : PlyRenderer.c
	$(COMPILE) -c PlyRenderer.c

#########################################################
#           Delete temporary files
#########################################################

clean:
	rm $(OUTPUT) $(OBJECTS)
