#########################################################
##             	librarys to link
#########################################################

LIBS= -lGL -lGLU -lglut -lm -lSOIL

#########################################################
##		Compiler
#########################################################

COMPILE= gcc -O2

#########################################################
##              Output file
#########################################################

OUTPUT=SolarSystem

#########################################################
##              Input objects
#########################################################

OBJECTS= SolarSystem.o


#########################################################
##      	Everything is dependant on the output file
#########################################################

all : $(OUTPUT)

#########################################################
##  The output program is dependant on the input objects
#########################################################

$(OUTPUT) : $(OBJECTS)
	$(COMPILE) $(OBJECTS) $(LIBS) -o $(OUTPUT)


#########################################################
##     		Compile files.
#########################################################

DSK.o : SolarSystem.c
	$(COMPILE) -c SolarSystem.c

#########################################################
#           Delete temporary files
#########################################################

clean:
	rm $(OUTPUT) $(OBJECTS)
